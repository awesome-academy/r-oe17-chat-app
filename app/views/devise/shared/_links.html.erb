<%- if controller_name != 'sessions' %>
  <%= link_to t(".a_login"), new_session_path(resource_name), class: "small" %><br/>
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(".a_signup"), new_registration_path(resource_name), class: "small" %><br/>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(".a_forgor_password"), new_password_path(resource_name), class: "small" %><br/>
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(".a_confirmable"), new_confirmation_path(resource_name) %><br/>
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(".a_lockable"), new_unlock_path(resource_name) %><br/>
<% end %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br/>
  <% end %>
<% end %>
